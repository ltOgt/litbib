\newcommand{\lit}[2]{%
	\begingroup%
	\setkeys{LIT}{#1}% Set new keys
	\newcommand{\content}{
		% <AUTHORS>
		\LIT@authors%
		% <year>
		~(\LIT@year).%
		% <TITLE>
			% <title>
			~\textit{\LIT@title}%
			% [,<NUMBER>].
			\ifthenelse{\equal{\LIT@edition}{}}%
			% [ (edition)]
				% if edition not set
				{}%
				% if edition set
				{~(Ed.~{\LIT@edition})}%
			\ifthenelse{\equal{\LIT@volume}{}}%
				% if volume is not set
				{%
					\ifthenelse{\equal{\LIT@issue}{}}%
						% and issue is not set
						{.}%
						% and issue is set
						{,~(\LIT@issue).}%
				}%
				% if volume is set
				{%
					\ifthenelse{\equal{\LIT@issue}{}}%
						% and issue is not set
						{,~Vol.\LIT@volume.}%
						% and issue is set
						{,~Vol.\LIT@volume(\LIT@issue).}%
				}%
			% [ {(ISBN: <isbn>)|(DOI: <doi>)}]
			\ifthenelse{\equal{\LIT@isbn}{}}%
				% if isbn is not set
				{%
					\ifthenelse{\equal{\LIT@doi}{}}%
						% and doi is not set
						{}%
						% but doi is set
						{~DOI:~\LIT@doi.}%
				}%
				% if isbn is set
				{~ISBN:~\LIT@isbn.}%
		% <IN> // Only if title set
		\ifthenelse{\equal{\LIT@inTitle}{}}%
			% if in title is not set
			{}%
			% if in title is set
			% [<AUTHORS>. ]
			{~In:%
				\ifthenelse{\equal{\LIT@inEditors}{}}%
					% if editor is not set
					{}%
					% if editor is set
					{~\LIT@inEditors~(Ed.),}%
			% <TITLE>
				% <title>
				~\textit{\LIT@inTitle}%
				\ifthenelse{\equal{\LIT@inEdition}{}}%
				% [ (inEdition)]
					% if inEdition not set
					{}%
					% if inEdition set
					{~(Ed.~{\LIT@inEdition})}%
				\ifthenelse{\equal{\LIT@inYear}{}}%
					% if year not set
					{}%
					% if year set
					{,~(published \LIT@inYear)}%
				% [,<NUMBER>]
				\ifthenelse{\equal{\LIT@inVolume}{}}%
					% if volume is not set
					{%
						\ifthenelse{\equal{\LIT@inIssue}{}}%
							% and issue is not set
							{}%
							% and issue is set
							{,~(\LIT@inIssue)}%
					}%
					% if volume is set
					{%
						\ifthenelse{\equal{\LIT@inIssue}{}}%
							% and issue is not set
							{,~Vol.\LIT@inVolume}%
							% and issue is set
							{,~Vol.\LIT@inVolume(\LIT@inIssue)}%
					}%
					% [, p.<first_page>-<last_page>]
					\ifthenelse{\equal{\LIT@inPages}{}}%
						% if pages is not set
						{.}%
						% if pages is set
						{,~p.\LIT@inPages.}%
					% [ {(ISBN: <isbn>)|(DOI: <doi>)}]
					\ifthenelse{\equal{\LIT@inIsbn}{}}%
						% if isbn is not set
						{%
							\ifthenelse{\equal{\LIT@inDoi}{}}%
							% if doi is not set
							{}%
							% if doi is set
							{~DOI:~\LIT@inDoi.}%
						}%
						% if isbn is set
						{~ISBN:~\LIT@inIsbn.}%
				}% </IN>
			% <PUBLISHER>.
			\ifthenelse{\equal{\LIT@pubLocation}{}}%
				% if location is not set
				{}%
				% if location is set
				{~\LIT@pubLocation,}%
			\ifthenelse{\equal{\LIT@pubPublisher}{}}%
				% if publisher is not set
				{}%
				% if publisher is set
				{~\LIT@pubPublisher.}%
			% [<ADDITIONS>.]
			\ifthenelse{\equal{\LIT@addInetSrc}{}}%
				% if source is not set
				{}%
				% if source is set
				{~Retreived~from:~\LIT@addInetSrc~[\LIT@addInetDate].}%
	}%
	\ifcl%
		\bibitem[\LIT@label]{#2}{\content}%
	\else%
		\bibitem{#2}{\content}%
	\fi%
	\endgroup%
}
